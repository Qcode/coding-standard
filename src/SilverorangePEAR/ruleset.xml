<?xml version="1.0"?>
<ruleset name="SilverorangePEAR">
  <description>Silverorange PEAR coding standard for packages missing documentation</description>

  <!--
    Import entire PEAR standard.
  -->
  <rule ref="PEAR" />

  <!--
    Ignore rules concerning doc comments
  -->
  <rule ref="Generic.Commenting.DocComment">
    <severity>0</severity>
  </rule>
  <rule ref="PEAR.Commenting.FileComment">
    <severity>0</severity>
  </rule>
  <rule ref="PEAR.Commenting.ClassComment">
    <severity>0</severity>
  </rule>
  <rule ref="PEAR.Commenting.FunctionComment">
    <severity>0</severity>
  </rule>
</ruleset>
